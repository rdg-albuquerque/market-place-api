{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Market place",
        "description": "Rest API - CRUD de usuários / produtos"
    },
    "host": "market-place-cubos.herokuapp.com",
    "basePath": "/",
    "tags": [],
    "schemes": ["http", "https"],
    "consumes": [],
    "produces": [],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "paths": {
        "/usuarios": {
            "post": {
                "tags": ["Usuário"],
                "description": "Criar novo usuário",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": ["nome", "email", "senha", "nome_loja"],
                            "properties": {
                                "nome": {
                                    "example": "any"
                                },
                                "email": {
                                    "example": "any"
                                },
                                "senha": {
                                    "example": "any"
                                },
                                "nome_loja": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "O usuario foi cadastrado com sucesso!"
                    },
                    "400": {
                        "description": "O email já existe"
                    },
                    "500": {
                        "description": "Não foi possível cadastrar o usuário"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": ["Login"],
                "description": "Efetuar login",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": ["email", "senha"],
                            "properties": {
                                "email": {
                                    "example": "any"
                                },
                                "senha": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#components/schemas/Login"
                        }
                    },
                    "400": {
                        "description": "Email e senha não confere"
                    }
                }
            }
        },
        "/perfil": {
            "get": {
                "tags": ["Usuário"],
                "description": "Obter informações sobre o usuário logado",
                "parameters": [],
                "security": [{ "Bearer": [] }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#components/schemas/Login"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "tags": ["Usuário"],
                "description": "Efetuar mudanças das informações do usuário logado",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "nome": {
                                    "example": "any"
                                },
                                "email": {
                                    "example": "any"
                                },
                                "senha": {
                                    "example": "any"
                                },
                                "nome_loja": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/produtos": {
            "get": {
                "tags": ["Produtos"],
                "description": "Obter lista com todos os produtos cadastrados pelo usuário",
                "security": [{ "Bearer": [] }],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "post": {
                "tags": ["Produtos"],
                "description": "Cadastrar novo produto",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": ["nome", "estoque", "preco"],
                            "properties": {
                                "nome": {
                                    "example": "any"
                                },
                                "estoque": {
                                    "example": 5
                                },
                                "categoria": {
                                    "example": "any"
                                },
                                "preco": {
                                    "example": 5000
                                },
                                "descricao": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },

                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    },
                    "500": {
                        "description": "Não foi possível cadastrar o produto"
                    }
                }
            }
        },
        "/produtos/{id}": {
            "get": {
                "tags": ["Produtos"],
                "description": "Obter produto por ID",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "tags": ["Produtos"],
                "description": "Efetuar mudanças nas informações do produto",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "obj",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "nome": {
                                    "example": "any"
                                },
                                "estoque": {
                                    "example": 5
                                },
                                "preco": {
                                    "example": 5000
                                },
                                "categoria": {
                                    "example": "any"
                                },
                                "descricao": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "delete": {
                "tags": ["Produtos"],
                "description": "Deletar um produto por ID",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/produtos/{id}/img": {
            "put": {
                "tags": ["Imagem do produto"],
                "description": "Subir uma imagem para o produto",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "obj",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "nome_imagem": {
                                    "example": "any.png or path/any.png"
                                },
                                "imagem": {
                                    "example": "base64"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "delete": {
                "tags": ["Imagem do produto"],
                "description": "Deletar a imagem de um produto",
                "security": [{ "Bearer": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "definitions": {},
    "components": {
        "schemas": {
            "Login": {
                "type": "object",
                "properties": {
                    "usuario": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "number"
                            },
                            "nome": {
                                "type": "string"
                            },
                            "nome_loja": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            }
                        }
                    },
                    "token": { "type": "string" }
                }
            }
        }
    }
}
